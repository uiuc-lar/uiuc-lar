<application>
<name>Cameras (Calibrated)</name>
<dependencies>
   <port>/root</port>
</dependencies> 
<module>
  <name>icubmoddev</name>
  <parameters>--device grabber --subdevice dragonfly2 --width 320 --height 240 --video_type 1 --white_balance 0.464 0.757 --gain 0.233 --shutter 0.703 --name /icub/cam/left  --brightness 0 --DR2 --stamp --d 0 --sharpness 0.5 --hue 0.48 --gamma 0.4 --saturation 0.271 --framerate 30</parameters>
  <node>pc104</node>
  <tag>camera_left</tag>
</module>
<module>
  <name>icubmoddev</name>
  <parameters>--device grabber --subdevice dragonfly2 --width 320 --height 240 --video_type 1 --white_balance 0.464 0.757 --gain 0.233 --shutter 0.703 --name /icub/cam/right  --brightness 0 --DR2 --stamp --d 1 --sharpness 0.5 --hue 0.48 --gamma 0.4 --saturation 0.271 --framerate 30</parameters>
  <node>pc104</node>
  <tag>camera_right</tag>
</module>
<module>
  <name>camCalib</name>
  <parameters>--name /icub/camcalib/left --context /usr/local/robot/lar/conf --group CAMERA_CALIBRATION_LEFT --from bertEyes.ini</parameters>
  <node>johnny5</node>
  <tag>camCalibLeft</tag>
</module>
<module>
  <name>camCalib</name>
  <parameters>--name /icub/camcalib/right --context /usr/local/robot/lar/conf --group CAMERA_CALIBRATION_RIGHT --from bertEyes.ini</parameters>
  <node>johnny5</node>
  <tag>camCalibRight</tag>
</module>
<module>
  <name>yarpview</name>
  <parameters>--name /icub/view/left --x 0 --y 0 --synch</parameters>
  <node>johnny5</node>
  <tag>viewleft</tag>
</module>
<module>
  <name>yarpview</name>
  <parameters>--name /icub/view/right --x 320 --y 0 --synch</parameters>
  <node>johnny5</node>
<tag>viewright</tag>
</module>
<module>
  <name>frameGrabberGui2</name>
  <parameters>--local /icub/fggui/left --remote /icub/cam/left --x 0 --y 350 --width 350 --height 500</parameters>
  <tag>fggui_left</tag>
  <node>johnny5</node>
</module>
<module>
  <name>frameGrabberGui2</name>
  <parameters>--local /icub/fggui/right --remote /icub/cam/right --x 320 --y 350 --width 350 --height 500</parameters>
  <tag>fggui_right</tag>
  <node>johnny5</node>
</module>
<connection>
  <from>/icub/cam/left</from>
  <to>/icub/camcalib/left/in</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icub/cam/right</from>
  <to>/icub/camcalib/right/in</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icub/camcalib/left/out</from>
  <to>/icub/view/left</to>
  <protocol>tcp</protocol>
</connection>
<connection>
  <from>/icub/camcalib/right/out</from>
  <to>/icub/view/right</to>
  <protocol>tcp</protocol>
</connection>
</application>

